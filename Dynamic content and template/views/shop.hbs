<main>
    {{#if hasProducts}}
    <div class="grid">
        <h1>My Products</h1>
        <p>List of all the products...</p>
        {{#each prods}}
        <article class="card product-item">
            <header class="card__header">
                <h1 class="product__title">{{this.title}}</h1>
            </header>
            <div class="card__image">
                <img src="https://media.istockphoto.com/photos/library-picture-id1028739954?k=6&m=1028739954&s=612x612&w=0&h=rCJgAeeLo3BYYz7Jyr_2D0ywSMmkTCwIEmM7nfXRe4w="
                    alt="first book">
            </div>
            <div class="card__content">
                <h2 class="product__price">$20.99</h2>
                <p class="product__description">
                    A very good book!
                </p>
            </div>
            <div class="card__actions">
                <button class="btn">Add to Cart</button>
            </div>
        </article>
        {{/each}}
    </div>
    {{else}}
    <h1>No product</h1>
    {{/if}}
</main>