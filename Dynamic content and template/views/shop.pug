extends layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/CSS/product.css")

block content
    main
        if prods.length > 0
            .grid
                each product in prods    
                    article.card.product-item
                        header.card__header
                            h1.product__title #{product.title}   
                        .card__image
                            img(src="https://media.istockphoto.com/photos/library-picture-id1028739954?k=6&m=1028739954&s=612x612&w=0&h=rCJgAeeLo3BYYz7Jyr_2D0ywSMmkTCwIEmM7nfXRe4w=", alt="a book")
                        .card__content
                            h2.product__price $20.99
                            p.product__description A very good book
                        .card__actions
                            button.btn Add to Cart
        else    
            h1 No Product